<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.09"
        android:background="@drawable/border"
        android:src="@drawable/ic_launcher" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.27"
        android:background="@drawable/border" >

        <!-- 
        <EditText
            android:id="@+id/addPageDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:ems="10"
            android:inputType="textMultiLine"
            android:padding="10dp" />
    -->

        <TextView
            android:id="@+id/pageDescriptionTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="page descripion goes here" />

    </ScrollView>

    <ListView
        android:id="@+id/list_options"
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border" >
    </ListView>

    <Button
        android:id="@+id/addAnnotationButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="View/Add Annotations"
        android:onClick = "launchAnnotationsActivity" />

</LinearLayout>