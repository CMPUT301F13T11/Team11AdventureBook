<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/storyView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1.44"
            android:gravity="center"
            android:textSize="20sp" />

        <ExpandableListView
            android:id="@+id/expList"
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:layout_weight="0.57"
            android:scrollbars="vertical"
            tools:listitem="@android:layout/simple_expandable_list_item_2" >
        </ExpandableListView>

        <TextView
            android:id="@+id/pageView"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.37"
            android:gravity="left"
            android:textSize="15sp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center" >
    
            <Button
            android:id="@+id/create_new_page"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/create_new_page" />

        <Button
            android:id="@+id/return_local_lib"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/return_local_lib" />
    
</LinearLayout>


    </LinearLayout>

</RelativeLayout>